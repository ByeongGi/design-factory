{
  "$schema": "https://tr.designtokens.org/format/",
  "color": {
    "primary": {
      "$type": "color",
      "$value": "#1976d2",
      "$description": "Primary brand color - Material Blue 700"
    },
    "primary-dark": {
      "$type": "color",
      "$value": "#1565c0",
      "$description": "Darker shade of primary - Material Blue 800"
    },
    "primary-light": {
      "$type": "color",
      "$value": "#42a5f5",
      "$description": "Lighter shade of primary - Material Blue 400"
    },
    "secondary": {
      "$type": "color",
      "$value": "#f50057",
      "$description": "Secondary accent color - Material Pink A400"
    },
    "surface": {
      "$type": "color",
      "$value": "#ffffff",
      "$description": "Surface background color"
    },
    "background": {
      "$type": "color",
      "$value": "#fafafa",
      "$description": "Page background color - Material Grey 50"
    },
    "error": {
      "$type": "color",
      "$value": "#d32f2f",
      "$description": "Error state color - Material Red 700"
    },
    "success": {
      "$type": "color",
      "$value": "#388e3c",
      "$description": "Success state color - Material Green 700"
    },
    "warning": {
      "$type": "color",
      "$value": "#f57c00",
      "$description": "Warning state color - Material Orange 700"
    },
    "text": {
      "primary": {
        "$type": "color",
        "$value": "rgba(0, 0, 0, 0.87)",
        "$description": "Primary text color with 87% opacity"
      },
      "secondary": {
        "$type": "color",
        "$value": "rgba(0, 0, 0, 0.60)",
        "$description": "Secondary text color with 60% opacity"
      },
      "disabled": {
        "$type": "color",
        "$value": "rgba(0, 0, 0, 0.38)",
        "$description": "Disabled text color with 38% opacity"
      },
      "hint": {
        "$type": "color",
        "$value": "rgba(0, 0, 0, 0.38)",
        "$description": "Hint text color"
      }
    },
    "divider": {
      "$type": "color",
      "$value": "rgba(0, 0, 0, 0.12)",
      "$description": "Divider color"
    }
  },
  "spacing": {
    "0": {
      "$type": "dimension",
      "$value": "0px"
    },
    "1": {
      "$type": "dimension",
      "$value": "4px",
      "$description": "Base spacing unit"
    },
    "2": {
      "$type": "dimension",
      "$value": "8px",
      "$description": "2x base unit"
    },
    "3": {
      "$type": "dimension",
      "$value": "12px",
      "$description": "3x base unit"
    },
    "4": {
      "$type": "dimension",
      "$value": "16px",
      "$description": "4x base unit"
    },
    "6": {
      "$type": "dimension",
      "$value": "24px",
      "$description": "6x base unit"
    },
    "8": {
      "$type": "dimension",
      "$value": "32px",
      "$description": "8x base unit"
    },
    "12": {
      "$type": "dimension",
      "$value": "48px",
      "$description": "12x base unit"
    }
  },
  "typography": {
    "fontFamily": {
      "base": {
        "$type": "fontFamily",
        "$value": ["Roboto", "Helvetica", "Arial", "sans-serif"],
        "$description": "Primary font family"
      },
      "monospace": {
        "$type": "fontFamily",
        "$value": ["Roboto Mono", "monospace"],
        "$description": "Monospace font family for code"
      }
    },
    "fontSize": {
      "h1": {
        "$type": "dimension",
        "$value": "96px",
        "$description": "Display heading 1"
      },
      "h2": {
        "$type": "dimension",
        "$value": "60px",
        "$description": "Display heading 2"
      },
      "h3": {
        "$type": "dimension",
        "$value": "48px",
        "$description": "Display heading 3"
      },
      "h4": {
        "$type": "dimension",
        "$value": "34px",
        "$description": "Heading 4"
      },
      "h5": {
        "$type": "dimension",
        "$value": "24px",
        "$description": "Heading 5"
      },
      "h6": {
        "$type": "dimension",
        "$value": "20px",
        "$description": "Heading 6"
      },
      "body1": {
        "$type": "dimension",
        "$value": "16px",
        "$description": "Body text 1"
      },
      "body2": {
        "$type": "dimension",
        "$value": "14px",
        "$description": "Body text 2"
      },
      "button": {
        "$type": "dimension",
        "$value": "14px",
        "$description": "Button text"
      },
      "caption": {
        "$type": "dimension",
        "$value": "12px",
        "$description": "Caption text"
      }
    },
    "fontWeight": {
      "light": {
        "$type": "number",
        "$value": 300
      },
      "regular": {
        "$type": "number",
        "$value": 400
      },
      "medium": {
        "$type": "number",
        "$value": 500
      },
      "bold": {
        "$type": "number",
        "$value": 700
      }
    },
    "lineHeight": {
      "tight": {
        "$type": "number",
        "$value": 1.2
      },
      "normal": {
        "$type": "number",
        "$value": 1.5
      },
      "relaxed": {
        "$type": "number",
        "$value": 1.75
      }
    }
  },
  "borderRadius": {
    "none": {
      "$type": "dimension",
      "$value": "0px"
    },
    "small": {
      "$type": "dimension",
      "$value": "2px",
      "$description": "Small border radius"
    },
    "medium": {
      "$type": "dimension",
      "$value": "4px",
      "$description": "Medium border radius (default)"
    },
    "large": {
      "$type": "dimension",
      "$value": "8px",
      "$description": "Large border radius"
    },
    "full": {
      "$type": "dimension",
      "$value": "9999px",
      "$description": "Fully rounded"
    }
  },
  "shadow": {
    "none": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "0px",
        "blur": "0px",
        "spread": "0px",
        "color": "rgba(0, 0, 0, 0)"
      }
    },
    "elevation-1": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "2px",
        "blur": "4px",
        "spread": "-1px",
        "color": "rgba(0, 0, 0, 0.2)"
      },
      "$description": "Material elevation level 1"
    },
    "elevation-2": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "4px",
        "blur": "8px",
        "spread": "0px",
        "color": "rgba(0, 0, 0, 0.14)"
      },
      "$description": "Material elevation level 2"
    },
    "elevation-3": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "8px",
        "blur": "16px",
        "spread": "0px",
        "color": "rgba(0, 0, 0, 0.12)"
      },
      "$description": "Material elevation level 3"
    },
    "elevation-4": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "16px",
        "blur": "24px",
        "spread": "2px",
        "color": "rgba(0, 0, 0, 0.14)"
      },
      "$description": "Material elevation level 4"
    }
  },
  "transition": {
    "duration": {
      "fast": {
        "$type": "duration",
        "$value": "150ms",
        "$description": "Fast transition"
      },
      "normal": {
        "$type": "duration",
        "$value": "250ms",
        "$description": "Normal transition"
      },
      "slow": {
        "$type": "duration",
        "$value": "400ms",
        "$description": "Slow transition"
      }
    },
    "easing": {
      "standard": {
        "$type": "cubicBezier",
        "$value": [0.4, 0.0, 0.2, 1],
        "$description": "Standard Material easing"
      },
      "decelerate": {
        "$type": "cubicBezier",
        "$value": [0.0, 0.0, 0.2, 1],
        "$description": "Decelerate easing"
      },
      "accelerate": {
        "$type": "cubicBezier",
        "$value": [0.4, 0.0, 1, 1],
        "$description": "Accelerate easing"
      }
    }
  }
}
